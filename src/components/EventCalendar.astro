---
export type EventSource = 'club' | 'social' | 'external';

export type CalendarEvent = {
  summary: string;
  startDate: Date;
  endDate?: Date;
  url?: string;
  location?: string;
  external?: boolean;
  source?: EventSource;
};

interface Props {
  events: CalendarEvent[];
  maxDaysInPast?: number;
  maxDaysInFuture?: number;
}

const { events, maxDaysInPast, maxDaysInFuture } = Astro.props;
const sortedEvents = [...events].sort((a, b) => a.startDate.getTime() - b.startDate.getTime());

const TIMEZONE = 'Australia/Melbourne';

// Format helpers
function getDayNumber(date: Date): number {
  return parseInt(date.toLocaleDateString('en-AU', { day: 'numeric', timeZone: TIMEZONE }), 10);
}

function getDayOfWeek(date: Date): string {
  return date.toLocaleDateString('en-AU', { weekday: 'short', timeZone: TIMEZONE });
}

function getMonthKey(date: Date): string {
  return date.toLocaleDateString('en-AU', { month: 'numeric', year: 'numeric', timeZone: TIMEZONE });
}

function getMonthLabel(date: Date): string {
  return date.toLocaleDateString('en-AU', { month: 'long', year: 'numeric', timeZone: TIMEZONE });
}

// Group events by month
type MonthGroup = {
  key: string;
  label: string;
  events: CalendarEvent[];
};

const groupedByMonth: MonthGroup[] = [];
let currentGroup: MonthGroup | null = null;

for (const event of sortedEvents) {
  const monthKey = getMonthKey(event.startDate);
  const monthLabel = getMonthLabel(event.startDate);

  if (!currentGroup || currentGroup.key !== monthKey) {
    currentGroup = { key: monthKey, label: monthLabel, events: [] };
    groupedByMonth.push(currentGroup);
  }
  currentGroup.events.push(event);
}

function getEventSourceClass(event: CalendarEvent): string {
  return `event-${event.source || 'other'}`;
}
---

{sortedEvents.length === 0 ? (
  <p class="no-events">No events scheduled at the moment. Check back soon!</p>
) : (
  <div
    class="event-calendar"
    data-max-days-in-past={maxDaysInPast}
    data-max-days-in-future={maxDaysInFuture}
  >
    {groupedByMonth.map((group) => (
      <div class="month-group">
        <h3 class="month-header">{group.label}</h3>
        <div class="events-list">
          {group.events.map((event) => (
            <div class={`event-row ${getEventSourceClass(event)}`} data-date={event.startDate.toISOString()}>
              <div class="event-date">
                <span class="day-number">{getDayNumber(event.startDate)}</span>
                <span class="day-name">{getDayOfWeek(event.startDate)}</span>
              </div>
              <div class="event-details">
                <div class="event-title">
                  {event.url ? (
                    <a href={event.url} class:list={{ external: event.external }}>
                      {event.summary}
                      {event.external && <span class="external-icon"> â†—</span>}
                    </a>
                  ) : (
                    <span>{event.summary}</span>
                  )}
                </div>
                {event.location && (
                  <div class="event-location">{event.location}</div>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
)}

<style>
  .event-calendar {
    margin: 1rem 0;
  }

  .month-group {
    margin-bottom: 1.5rem;
  }

  .month-header {
    font-weight: 600;
    border-bottom: 1px solid var(--color-border, #e5e5e5);
  }

  .events-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .event-row {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 0.75rem;
    border-radius: 0.5rem;
    border-left: 3px solid transparent;
  }

  .event-club {
    background: #eff6ff;
    border-left-color: #3b82f6;
  }

  .event-social {
    background: #fefce8;
    border-left-color: #eab308;
  }

  .event-external {
    background: #f9fafb;
    border-left-color: #9ca3af;
  }

  .event-other {
    background: #f9fafb;
    border-left-color: #d1d5db;
  }

  .event-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 3rem;
    text-align: center;
  }

  .day-number {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
    color: var(--color-text, #111827);
  }

  .day-name {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--color-text-muted, #6b7280);
    letter-spacing: 0.025em;
  }

  .event-details {
    flex: 1;
    min-width: 0;
  }

  .event-title {
    font-weight: 900;
    font-size: 1.1rem;
    flex: 1;
  }

  .event-title a {
    color: inherit;
    text-decoration: none;
  }

  .event-title a:hover {
    text-decoration: underline;
  }

  .external-icon {
    font-size: 0.85em;
    opacity: 0.6;
  }

  .event-location {
    font-size: 0.875rem;
    color: var(--color-text-muted, #6b7280);
    margin-top: 0.25rem;
  }

  @media (min-width: 640px) {
    .event-details {
      display: flex;
      align-items: baseline;
      gap: 1rem;
    }

    .event-location {
      margin-top: 0;
      flex-shrink: 0;
    }
  }

  .no-events {
    color: var(--color-text-muted, #6b7280);
    font-style: italic;
  }

  .hidden {
    display: none;
  }

  @media (max-width: 480px) {
    .event-row {
      padding: 0.5rem;
    }

    .day-number {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  // Filter events based on configurable date range
  document.querySelectorAll('.event-calendar').forEach((calendar) => {
    const maxDaysInPast = calendar.getAttribute('data-max-days-in-past');
    const maxDaysInFuture = calendar.getAttribute('data-max-days-in-future');

    if (!maxDaysInPast && !maxDaysInFuture) return;

    const today = new Date();
    today.setHours(0, 0, 0, 0);

    const minDate = maxDaysInPast
      ? new Date(today.getTime() - parseInt(maxDaysInPast) * 24 * 60 * 60 * 1000)
      : null;
    const maxDate = maxDaysInFuture
      ? new Date(today.getTime() + parseInt(maxDaysInFuture) * 24 * 60 * 60 * 1000)
      : null;

    calendar.querySelectorAll('.event-row[data-date]').forEach((row) => {
      const eventDate = new Date(row.getAttribute('data-date')!);
      if ((minDate && eventDate < minDate) || (maxDate && eventDate > maxDate)) {
        row.classList.add('hidden');
      }
    });

    // Hide month groups with no visible events
    calendar.querySelectorAll('.month-group').forEach((group) => {
      const visibleEvents = group.querySelectorAll('.event-row:not(.hidden)');
      if (visibleEvents.length === 0) {
        group.classList.add('hidden');
      }
    });
  });
</script>
