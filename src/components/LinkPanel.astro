---
import { Icon } from 'astro-icon/components';

interface Props {
	href: string;
	title: string;
	description?: string;
	icon?: string;
	image?: string;
	class?: string;
}

const { href, title, description, icon, image, class: className = '' } = Astro.props;
---

<a href={href} class={`link-panel not-prose ${className}`}>
	<div class="link-panel-inner">
		<div class="link-panel-icon">
			{icon && <Icon name={icon} size={58} />}
			{image && <img src={image} alt={`${title} logo`} />}
		</div>
		<div class="link-panel-content">
			<h3>{title}</h3>
			{description && <p>{description}</p>}
		</div>
	</div>
</a>

<style>
	.link-panel {
		text-decoration: none;
		color: inherit;
		display: block;
		cursor: pointer;
		height: 100%;
	}

	.link-panel-inner {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 1.5rem;
		background-color: #f9fafb;
		border: 1px solid #d1d5db;
		border-radius: 0.5rem;
		padding: 1.5rem;
		transition: all 0.2s;
		height: 100%;
	}

	.link-panel:hover .link-panel-inner {
		background-color: #ffffff;
		border-color: var(--color-mdgc-blue-dark);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}

	.link-panel:hover .link-panel-icon {
		color: var(--color-mdgc-blue-dark);
	}

	.link-panel-icon {
		flex-shrink: 0;
		color: var(--color-mdgc-blue);
		transition: all 0.2s;
	}

	.link-panel-icon img {
		width: 58px;
		height: 58px;
		object-fit: contain;
	}

	.link-panel-content {
		flex-grow: 1;
		text-align: left;
	}

	.link-panel h3 {
		font-size: 1.25rem;
		font-weight: 700;
		margin: 0 0 0.25rem 0;
		color: #1f2937;
	}

	.link-panel p {
		color: #6b7280;
		font-size: 0.875rem;
		margin: 0;
	}
</style>
