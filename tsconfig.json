{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@assets/*": ["assets/*"],
      "@images/*": ["assets/images/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@styles/*": ["styles/*"],
      "@data/*": ["data/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["astro/client"]
  }
}
